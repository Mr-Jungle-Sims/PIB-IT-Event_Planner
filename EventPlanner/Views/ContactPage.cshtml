@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.ContactPage>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
	Layout = "Layout.cshtml";
}

    <div class="contact-layout">
        
		<!-- Jumbotron, w title -->
		<div class="wrapper">
		<div class="jumbotron-map ">
				<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2599.1900023987155!2d7.271752951181559!3d49.34855227392096!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4795c4fac39ce33d%3A0x1bb3e2358d1f3761!2sAuguststra%C3%9Fe%2040%2C%2066450%20Bexbach!5e0!3m2!1sfr!2sde!4v1679867154878!5m2!1sfr!2sde" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
		</div>
		</div>

		<!-- Main container -->

        <div class="contact-container">
            	<!-- Contact details -->
		<div class="contact-details">
			<h3>Nehmen Sie Kontakt mit uns auf!</h3>
			<p>Sie können sich jederzeit mit der Blumenfee in Verbindung setzen, indem Sie uns anrufen oder uns eine E-Mail schicken. <br /> 
				<br /> 
				<strong>Besichtigungs- Beratungstermine nur nach Absprache.</strong>
				<br />
				<strong>Kostenvoranschlag erst nach Beratungstermin.</strong></p>

			<p>
				Auguststraße 40<br />
				D-66450 Bexbach<br />
				Deutschland</p>
			<p><span class="font-weight-bold">Nummer:</span> +49 1715 705 305</p>
			<p><span class="font-weight-bold">Email:</span> <a style="color:#c14abe" href="mailto:info@die-blumenfee.de">info@die-blumenfee.de</a></p>
		</div>
		
			<div class="contact-section">
					
			        @Model.Value("bodyText")
				
			</div>
			
			<div class="container-form">
				<p>Fill out the form below to get in touch with one of our team members. We will try to get back to you within 48 hours. If we do not reply within that time please feel free to use the form again.</p>

				<form>
					<div class="form-group">
						<label for="name">Name<span>*</span></label>
						<input 
							type="text" 
							name="name" 
							id="name" 
							required 
							class="form-element"
							placeholder="John" />
					</div>
					<div class="form-group">
						<label for="number">Telefonnummer<span>*</span></label>
						<input type="number" name="number" id="number" required class="form-element" placeholder="john.doe@example.com" />
					</div>
					<div class="form-group full">
						<label for="email">E-mail<span>*</span></label>
						<input type="email" name="email" id="email" required class="form-element" placeholder="Doe" />
					</div>
					<div class="form-group">
						<label for="location">Wo wird gefeiert?</label>
						<input type="text" name="location" id="location" class="form-element" placeholder="john.doe@example.com" />
					</div>
					<div class="form-group">
						<label for="invitees">Wie viel Gäste sind Eingeladen?</label>
						<input type="number" name="invitees" id="invitees" class="form-element" placeholder="john.doe@example.com" />
					</div>
					<div class="form-group">
						<label for="date">Wann soll die Feier stattfinden?</label>
						<input type="date" name="date" id="date" class="form-element" placeholder="john.doe@example.com" />
					</div>
					<div class="form-group">
						<label for="knowledge">Wie sind Sie auf uns Aufmerksam geworden?</label>
						<input type="text" name="knowledge" id="knowledge" class="form-element" placeholder="john.doe@example.com" />
					</div>
					<div class="form-group full">
						<label for="message">Nachricht</label>
						<textarea name="message" id="message" class="form-element" placeholder="I want a website please..."></textarea>
					</div>
					<div class="form-group">
						<label for="knowledge">Sind Sie ein Roboter?<span>*</span></label>
						<input type="text" name="knowledge" id="knowledge" class="form-element" placeholder="john.doe@example.com" />
					</div>
					<div class="form-group full">
						<label for="terms&conditions">Daten-Zustimmung<span>*</span></label>
						    <label>
						    <input type="radio" name="terms&conditions" id="terms&conditions" required class="form-element" placeholder="john.doe@example.com" />
						    Ja, ich bin mit der Speicherung und Verarbeitung meiner Daten einverstanden.
						    </label>
					</div>
					<div class="submit-group">
						<input type="submit" value="SEND MESSAGE" />
					</div>
				</form>
			</div>
			
		</div>
    </div>
		
